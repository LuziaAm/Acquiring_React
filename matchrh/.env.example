# .env.example
# Copie este arquivo para .env.local e configure as variáveis

# =======================
# CONFIGURAÇÕES BÁSICAS
# =======================

# Nome da aplicação
REACT_APP_NAME=RecruitAI
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION="Sistema Inteligente de Recrutamento"

# URL base da aplicação
REACT_APP_BASE_URL=http://localhost:3000

# Ambiente (development, staging, production)
NODE_ENV=development

# =======================
# API E BACKEND
# =======================

# URL da API backend (quando implementada)
REACT_APP_API_URL=https://api.recruitai.com
REACT_APP_API_VERSION=v1

# Timeout da API em milissegundos
REACT_APP_API_TIMEOUT=10000

# Chave de API (se necessária)
REACT_APP_API_KEY=your_api_key_here

# =======================
# ANALYTICS E TRACKING
# =======================

# Google Analytics
REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X
REACT_APP_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager
REACT_APP_GTM_ID=GTM-XXXXXXX

# Facebook Pixel
REACT_APP_FB_PIXEL_ID=xxxxxxxxxxxxxxxxx

# Hotjar
REACT_APP_HOTJAR_ID=xxxxxxxxx
REACT_APP_HOTJAR_VERSION=6

# =======================
# MONITORAMENTO DE ERROS
# =======================

# Sentry DSN para tracking de erros
REACT_APP_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx
REACT_APP_SENTRY_ENVIRONMENT=development

# LogRocket
REACT_APP_LOGROCKET_APP_ID=xxxxxx/recruitai

# Bugsnag
REACT_APP_BUGSNAG_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =======================
# INTEGRAÇÕES EXTERNAS
# =======================

# LinkedIn API (para importação de perfis)
REACT_APP_LINKEDIN_CLIENT_ID=xxxxxxxxxxxxxxxxxx
REACT_APP_LINKEDIN_REDIRECT_URI=http://localhost:3000/auth/linkedin/callback

# GitHub API (para portfólio de desenvolvedores)
REACT_APP_GITHUB_CLIENT_ID=xxxxxxxxxxxxxxxxxx

# Google APIs (para Google Drive, Gmail, etc.)
REACT_APP_GOOGLE_CLIENT_ID=xxxxxxxxxx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com

# Microsoft Graph API (para integração com Office 365)
REACT_APP_MICROSOFT_CLIENT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# =======================
# PROCESSAMENTO DE ARQUIVOS
# =======================

# Cloudinary (para upload de imagens/CVs)
REACT_APP_CLOUDINARY_CLOUD_NAME=your_cloud_name
REACT_APP_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# AWS S3 (para armazenamento de arquivos)
REACT_APP_AWS_BUCKET_NAME=recruitai-files
REACT_APP_AWS_REGION=us-east-1

# =======================
# NOTIFICAÇÕES
# =======================

# Firebase Cloud Messaging (push notifications)
REACT_APP_FCM_VAPID_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
REACT_APP_FCM_SENDER_ID=xxxxxxxxxxxx

# OneSignal
REACT_APP_ONESIGNAL_APP_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# =======================
# INTELIGÊNCIA ARTIFICIAL
# =======================

# OpenAI API (para análise avançada de textos)
REACT_APP_OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Hugging Face (para modelos de NLP)
REACT_APP_HUGGINGFACE_API_KEY=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =======================
# MAPAS E LOCALIZAÇÃO
# =======================

# Google Maps API
REACT_APP_GOOGLE_MAPS_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Mapbox
REACT_APP_MAPBOX_ACCESS_TOKEN=pk.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =======================
# PAGAMENTOS (futuro)
# =======================

# Stripe
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# PayPal
REACT_APP_PAYPAL_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =======================
# EMAIL E COMUNICAÇÃO
# =======================

# EmailJS (para envio de emails do frontend)
REACT_APP_EMAILJS_SERVICE_ID=service_xxxxxxxx
REACT_APP_EMAILJS_TEMPLATE_ID=template_xxxxxxxx
REACT_APP_EMAILJS_USER_ID=xxxxxxxxxxxxxxxxxxxxxx

# SendGrid (via API)
REACT_APP_SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =======================
# PERFORMANCE E CDN
# =======================

# CDN URL para assets estáticos
REACT_APP_CDN_URL=https://cdn.recruitai.com

# Webpack Bundle Analyzer
ANALYZE=false

# =======================
# CONFIGURAÇÕES DE BUILD
# =======================

# Gerar source maps em produção
GENERATE_SOURCEMAP=false

# Prefixo para assets
PUBLIC_URL=/

# Porta do servidor de desenvolvimento
PORT=3000

# HOST do servidor de desenvolvimento
HOST=localhost

# =======================
# FEATURES FLAGS
# =======================

# Habilitar modo de debug
REACT_APP_DEBUG_MODE=false

# Habilitar mock de dados
REACT_APP_USE_MOCK_DATA=true

# Habilitar service worker
REACT_APP_ENABLE_SERVICE_WORKER=true

# Habilitar analytics em desenvolvimento
REACT_APP_ANALYTICS_IN_DEV=false

# Habilitar modo experimental
REACT_APP_EXPERIMENTAL_FEATURES=false

# =======================
# CONFIGURAÇÕES DE CACHE
# =======================

# TTL do cache em segundos
REACT_APP_CACHE_TTL=3600

# Versão do cache (para invalidação)
REACT_APP_CACHE_VERSION=v1

# =======================
# CONFIGURAÇÕES DE TEMA
# =======================

# Tema padrão (light, dark, auto)
REACT_APP_DEFAULT_THEME=light

# Cores primárias personalizadas
REACT_APP_PRIMARY_COLOR=#3b82f6
REACT_APP_SECONDARY_COLOR=#10b981

# =======================
# RATE LIMITING
# =======================

# Limite de requests por minuto para algoritmo de IA
REACT_APP_AI_RATE_LIMIT=100

# Limite de uploads por hora
REACT_APP_UPLOAD_RATE_LIMIT=50

# =======================
# CONFIGURAÇÕES DE SEGURANÇA
# =======================

# Chave para criptografia local (se necessária)
REACT_APP_ENCRYPTION_KEY=your_encryption_key_here

# Salt para hashing
REACT_APP_SALT=your_salt_here

# =======================
# URLS DE CONTATO
# =======================

REACT_APP_SUPPORT_EMAIL=suporte@recruitai.com
REACT_APP_CONTACT_PHONE=+55-11-99999-9999
REACT_APP_COMPANY_ADDRESS="São Paulo, SP, Brasil"

# =======================
# REDES SOCIAIS
# =======================

REACT_APP_TWITTER_URL=https://twitter.com/recruitai
REACT_APP_LINKEDIN_URL=https://linkedin.com/company/recruitai
REACT_APP_FACEBOOK_URL=https://facebook.com/recruitai
REACT_APP_INSTAGRAM_URL=https://instagram.com/recruitai

# =======================
# DOCUMENTAÇÃO
# =======================

REACT_APP_DOCS_URL=https://docs.recruitai.com
REACT_APP_API_DOCS_URL=https://api.recruitai.com/docs
REACT_APP_CHANGELOG_URL=https://recruitai.com/changelog

# =======================
# NOTAS IMPORTANTES
# =======================

# 1. Todas as variáveis que começam com REACT_APP_ ficam disponíveis no frontend
# 2. Nunca commite chaves secretas no repositório
# 3. Use diferentes valores para development, staging e production
# 4. Para variáveis sensíveis, use serviços como Vercel Environment Variables
# 5. Algumas integrações podem precisar de configurações adicionais

